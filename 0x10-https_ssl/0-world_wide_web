#!/usr/bin/env bash
# Function to display information for a specific subdomain
domain_information() {
    local domain="$1"
    local subdomain="$2"
    dig "$subdomain.$domain" +short | awk -v subd="$subdomain" '{ printf "The subdomain %s is a %s record and points to %s\n", subd, $1, $2 }'
}

# Main script
if [ "$#" -eq 1 ]; then
    domain="$1"
    domain_information "$domain" www
    domain_information "$domain" lb-01
    domain_information "$domain" web-01
    domain_information "$domain" web-02
elif [ "$#" -eq 2 ]; then
    domain_information "$1" "$2"
fi
